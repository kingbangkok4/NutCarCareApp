<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg3"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="บริการของเรา"
        android:id="@+id/textView2"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textIsSelectable="true"
        android:background="#2600ff" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ทำความสะอาดภายใน (150 บาท)"
        android:id="@+id/checkBox1"
        android:checked="false"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="อบโอโซน (300 บาท)"
        android:id="@+id/checkBox2"
        android:checked="false"
        android:layout_below="@+id/checkBox1"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ขัดกระจกลบรอยน้ำ (500 บาท)"
        android:id="@+id/checkBox3"
        android:checked="false"
        android:layout_below="@+id/checkBox2"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ขัดล้อแม็กซ์ (300 บาท)"
        android:id="@+id/checkBox4"
        android:checked="false"
        android:layout_below="@+id/checkBox3"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="เคลือบสีด้วยน้ำยา (300 บาท)"
        android:id="@+id/checkBox5"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/checkBox4" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="เคลือบกระจก (450  บาท)"
        android:id="@+id/checkBox6"
        android:layout_below="@+id/checkBox5"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="เคลือบล้อแม็กซ์ (300 บาท)"
        android:id="@+id/checkBox7"
        android:layout_below="@+id/checkBox6"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ขจัดคราบยางมะตอย (500 บาท)"
        android:id="@+id/checkBox8"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/checkBox7"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="คำนวนราคา"
        android:id="@+id/btnTotal"
        android:background="@drawable/button3"
        android:layout_above="@+id/btnSubmit"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="ยืนยัน"
        android:id="@+id/btnSubmit"
        android:background="@drawable/button1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="59dp"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:hint="ราคารวม (บาท)"
        android:gravity="center"
        android:enabled="false"
        android:numeric="decimal"
        android:id="@+id/editTextTotal"
        android:background="#ffffff"
        android:layout_above="@+id/btnTotal"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="ออก"
        android:id="@+id/btnExit"
        android:background="@drawable/button2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>