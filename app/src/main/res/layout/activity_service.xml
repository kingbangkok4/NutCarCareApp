<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroller"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:minHeight="800dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#2600ff"
            android:gravity="center"
            android:text="บริการของเรา"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textIsSelectable="true" />

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="ทำความสะอาดภายใน (150 บาท)"
            android:layout_below="@+id/checkBox17"
            android:layout_alignParentStart="true" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="อบโอโซน (300 บาท)"
            android:layout_below="@+id/checkBox1"
            android:layout_alignParentStart="true" />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="ขัดกระจกลบรอยน้ำ (500 บาท)"
            android:layout_below="@+id/checkBox2"
            android:layout_alignParentStart="true" />

        <CheckBox
            android:id="@+id/checkBox4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="ขัดล้อแม็กซ์ (300 บาท)"
            android:layout_below="@+id/checkBox3"
            android:layout_alignParentStart="true" />

        <CheckBox
            android:id="@+id/checkBox5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="เคลือบสีด้วยน้ำยา (300 บาท)"
            android:layout_below="@+id/checkBox4"
            android:layout_alignParentStart="true" />

        <CheckBox
            android:id="@+id/checkBox6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="เคลือบกระจก (450  บาท)"
            android:layout_below="@+id/checkBox5"
            android:layout_alignParentStart="true" />

        <CheckBox
            android:id="@+id/checkBox7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="เคลือบล้อแม็กซ์ (300 บาท)"
            android:layout_below="@+id/checkBox6"
            android:layout_alignParentStart="true" />

        <CheckBox
            android:id="@+id/checkBox8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:text="ขจัดคราบยางมะตอย (500 บาท)"
            android:checked="false"
            android:layout_below="@+id/checkBox7"
            android:layout_alignParentStart="true" />


        <Button
            android:id="@+id/btnTotal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button3"
            android:text="คำนวนราคา"
            android:layout_below="@+id/editTextTotal"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button1"
            android:text="ข้อมูลลูกค้า"
            android:layout_below="@+id/btnTotal"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp" />

        <EditText
            android:id="@+id/editTextTotal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#ffffff"
            android:enabled="false"
            android:gravity="center"
            android:hint="ราคารวม (บาท)"
            android:numeric="decimal"
            android:layout_below="@+id/checkBox8"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/btnMain"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button5"
            android:text="เมนูหลัก"
            android:layout_below="@+id/btnSubmit"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp" />

        <CheckBox
            android:id="@+id/checkBox9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="ล้างสีภายนอก (150 บาท)"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView2" />

        <CheckBox
            android:id="@+id/checkBox10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="ล้างสี + ดูดฝุ่น (250 บาท)"
            android:layout_below="@+id/checkBox9"
            android:layout_alignParentStart="true" />

        <CheckBox
            android:id="@+id/checkBox11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="ล้างห้องเครื่อง (200 บาท)"
            android:layout_below="@+id/checkBox10"
            android:layout_alignParentStart="true" />

        <CheckBox
            android:id="@+id/checkBox12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="ล้างอัดฉีดช่วงล่าง (200 บาท)"
            android:layout_below="@+id/checkBox11"
            android:layout_alignParentStart="true" />

        <CheckBox
            android:id="@+id/checkBox13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="ขัดเคลือบสี + ลงแว๊กซ์ (450 บาท)"
            android:layout_below="@+id/checkBox12"
            android:layout_alignParentStart="true" />

        <CheckBox
            android:id="@+id/checkBox14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="ขัดเคลือบไฟหน้า (300 บาท)"
            android:layout_below="@+id/checkBox13"
            android:layout_alignParentStart="true" />

        <CheckBox
            android:id="@+id/checkBox15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="ขัดเบาะหนัง (280 บาท)"
            android:layout_below="@+id/checkBox14"
            android:layout_alignParentStart="true" />

        <CheckBox
            android:id="@+id/checkBox16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="ฟอกพรม (300 บาท)"
            android:layout_below="@+id/checkBox15"
            android:layout_alignParentStart="true" />

        <CheckBox
            android:id="@+id/checkBox17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="ฟอกเบาะพรม (320 บาท)"
            android:layout_below="@+id/checkBox16"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</ScrollView>