<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroller"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:minHeight="1500dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#2600ff"
            android:gravity="center"
            android:text="บริการของเรา"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textIsSelectable="true" />


        <Button
            android:id="@+id/btnTotal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button3"
            android:text="คำนวนราคา"
            android:layout_below="@+id/editTextTotal"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button1"
            android:text="ข้อมูลลูกค้า"
            android:layout_below="@+id/btnTotal"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/btnMain"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button5"
            android:text="เมนูหลัก"
            android:layout_below="@+id/btnSubmit"
            android:layout_alignParentStart="true" />

        <ListView
            android:id="@+id/listViewService"
            android:layout_width="wrap_content"
            android:layout_height="1200dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView2"
            android:layout_marginLeft="10dp" />

        <EditText
            android:id="@+id/editTextTotal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#ffffff"
            android:enabled="false"
            android:gravity="center"
            android:hint="ราคารวม (บาท)"
            android:numeric="decimal"
            android:layout_below="@+id/listViewService"
            android:layout_alignEnd="@+id/btnMain" />

    </RelativeLayout>

</ScrollView>