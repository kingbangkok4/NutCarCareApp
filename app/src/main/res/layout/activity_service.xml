<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_orang"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="บริการของเรา"
        android:id="@+id/textView2"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textIsSelectable="true"
        android:background="#ff3300" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ประเภทล้าง"
        android:id="@+id/textView3"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ล้างสีภายนอก (120 บาท)"
        android:id="@+id/checkBox1"
        android:checked="false"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ล้างสี+ดูดฝุ่น (200 บาท)"
        android:id="@+id/checkBox2"
        android:checked="false"
        android:layout_above="@+id/checkBox4"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ล้างห้องเครื่อง (250 บาท)"
        android:id="@+id/checkBox3"
        android:layout_below="@+id/textView3"
        android:layout_toEndOf="@+id/checkBox2"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ล้างอัดฉีดช่วงล่าง (120 บาท)"
        android:id="@+id/checkBox4"
        android:layout_below="@+id/checkBox1"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ประเภทขัด"
        android:id="@+id/textView4"
        android:layout_below="@+id/checkBox4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ขัดเคลือบสี (300 บาท)"
        android:id="@+id/checkBox5"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ลงแว๊กซี่ (250  บาท)"
        android:id="@+id/checkBox6"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/checkBox2" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ขัดลบรอยขีดข่วน (400 บาท)"
        android:id="@+id/checkBox7"
        android:layout_below="@+id/textView4"
        android:layout_toEndOf="@+id/checkBox2" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ขัดเคลือบไฟหน้า (200 บาท)"
        android:id="@+id/checkBox8"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/checkBox5"
        android:layout_alignStart="@+id/checkBox5" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ขัดเบาะหนัง (200 บาท)"
        android:id="@+id/checkBox9"
        android:layout_marginRight="50dp"
        android:layout_alignTop="@+id/checkBox8"
        android:layout_alignStart="@+id/checkBox6" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ประเภทฟอก"
        android:id="@+id/textView5"
        android:layout_below="@+id/checkBox8"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ฟอกพรม(200 บาท)"
        android:id="@+id/checkBox10"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ฟอกเบาะพรม (500 บาท)"
        android:id="@+id/checkBox11"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/checkBox9"
        android:checked="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="คำนวนราคา"
        android:id="@+id/btnTotal"
        android:background="#ff6600"
        android:layout_below="@+id/editTextTotal"
        android:layout_alignEnd="@+id/editTextTotal"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ยืนยัน"
        android:id="@+id/btnSubmit"
        android:background="#33ff00"
        android:layout_below="@+id/btnTotal"
        android:layout_marginTop="98dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:hint="ราคารวม (บาท)"
        android:gravity="center"
        android:enabled="false"
        android:numeric="decimal"
        android:id="@+id/editTextTotal"
        android:background="#ffffff"
        android:layout_below="@+id/checkBox11"
        android:layout_marginTop="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>