<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_orang"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ข้อมูลลูกค้า"
        android:id="@+id/textView6"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textIsSelectable="true"
        android:background="#ff3300"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ชื่อลูกค้า"
        android:id="@+id/textView7"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp">
        <EditText
            android:layout_width="558dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextCustomer"
            android:background="#fff" />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="39dp"
            android:layout_height="match_parent"
            android:id="@+id/btnSearch"
            android:layout_gravity="right"
            android:background="@drawable/black_search" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="เบอร์โทรศัพท์"
        android:id="@+id/textView8"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextMobile"
        android:inputType="phone"
        android:background="#fff" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="อีเมล์"
        android:id="@+id/textView9"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextEmail"
        android:inputType="textEmailAddress"
        android:background="#fff" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ป้ายทะเบียน"
        android:id="@+id/textView10"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextLicensePlate"
        android:inputType="text"
        android:background="#fff" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ยี่ห้อ"
        android:id="@+id/textView11"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextBrand"
        android:inputType="text"
        android:background="#fff" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ประเภทรถ"
        android:id="@+id/textView12"
        android:layout_marginTop="20dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/cmbType"
        android:background="#fff" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="รูปรถ"
        android:id="@+id/button2"
        android:background="#ff6600"
        android:layout_below="@+id/editTextTotal"
        android:layout_alignEnd="@+id/editTextTotal"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="บันทึก"
        android:id="@+id/button"
        android:background="#33ff00"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />


</LinearLayout>